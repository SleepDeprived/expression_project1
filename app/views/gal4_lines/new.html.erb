<h1>create a new gal4 line in the database</h1>
<%= flash[:error] %>
<%= form_for(@gal4) do |f| %>
  <%= f.label :name %>
    <%= f.text_field :name %>
  <%= f.label :version %>
    <%= f.text_field :version %>
  <%= f.label :p_element_backbone %>
    <%= f.text_field :p_element_backbone%>
  <%= f.label :gene %>
   <%= f.text_field :gene %>
  <%= f.label :copynumber %>
    <%= f.text_field :copynumber %>

    <%= f.fields_for :expression_profiles do |profile| %>
      <p>
        <%= profile.fields_for :locations do |location| %>
          <%= location.label :content, "Location" %>
          <%= location.text_field :name %>
        <% end %>

        <%= profile.label :content, "Start" %>
          <%= profile.text_field :start_stage_id %>

          <%# stages_array = Stage.all.map {|stage| [stage.name, stage.id]} %>
            <%#= options_for_select(stages_array)  %>

          <%#= profile.collection_select :stage_id, Stage.all, :id, :name, {:prompt => "Select the stage when expression is first detected in these locations"} %>

        <%= profile.label :content, "End" %>
          <%= profile.text_field :end_stage_id %>
        <%= profile.label :content, "Assessed using" %>
          <%= profile.text_field :assessed_by %>
      </p>
    <% end %>
  <%= submit_tag "Add Gal4" %>
<% end %>

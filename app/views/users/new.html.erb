<h2>Create an account</h2>

<% if @user.errors.any? %>
  <%= @user.errors.messages.each do |error, message| %>
  <%= message %>
  <% end %>
<% end %>

<%= form_for(@user) do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label :passoword_confirmation %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit "Sign Up" %>
  <%= link_to "Cancel" %>
<% end %>

